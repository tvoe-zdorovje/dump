	public void left() {
		int margin = 3;
		for (int[] xArr : matrix) {
			for (int i = 0; i < xArr.length; i++) {
				if (xArr[i] != 0 && i < margin) margin = i;
			}
		}

		if (x-1 >= 0-margin) --x;
	}

	public void right() {
		int margin = 0;
		for (int[] xArr : matrix) {
			for (int i = 0; i < xArr.length; i++) {
				if (xArr[i] != 0 && i > margin) margin = i;
			}
		}

		margin = 2-margin;

		int rEdge =

		if (x-1 >= rEdge +margin) --x;
	}